<!DOCTYPE html>
<html>
  <head>
    <title>Spoontacular</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="#">Spoontacular</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" href="#"><span class="sr-only">(current)</span></a>
        <%= link_to 'Home', root_path, class: 'navbar-brand' %>
      </li>
      </li>
          <li class="nav-item">
            <a class="nav-link" href="#"></a>
            <%= link_to 'About', about_path, class: 'navbar-brand' %>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#"></a>
            <%= link_to 'Sign in', new_user_session_path, class: 'navbar-brand' %>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#"></a>
            <%= link_to 'Sign up', new_user_registration_path, class: 'navbar-brand' %>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#"></a>
            <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'navbar-brand' %>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#"></a>
              <%= link_to 'Post a Recipe', new_recipes_path, class: 'navbar-brand' %>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#"></a>
              <%= link_to 'Search', search_path, class: 'navbar-brand' %>
          </li>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Dropdown
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          <a class="dropdown-item" href="#">Action</a>
          <a class="dropdown-item" href="#">Another action</a>
          <div class="dropdown-divider"></div>
          <a class="dropdown-item" href="#">Something else here</a>
        </div>
      </li>
    </ul>
  </div>
</nav>
  <% if notice.present? %>
   <p class="alert alert-info"><%= notice %></p>
  <% end %>
  <% if alert.present? %>
    <p class="alert alert-danger"><%= alert %></p>
  <% end %>
    <%= yield %>
  </body>
</html>
